{
    "$schema": "https://frank1o3.github.io/ModForge-CLI/schemas/modrinth_api.schema.json",
    "BASE_URL": "https://api.modrinth.com/v2",
    "ENDPOINTS": {
        "bulk": {
            "projects": "/projects",
            "version_files": "/version_files",
            "versions": "/versions"
        },
        "projects": {
            "check_following": "/project/{id}/check_following",
            "dependencies": "/project/{id}/dependencies",
            "gallery": "/project/{id}/gallery",
            "icon": "/project/{id}/icon",
            "project": "/project/{id}",
            "project_versions": "/project/{id}/version"
        },
        "search": "/search",
        "tags": {
            "categories": "/tag/category",
            "environments": "/tag/environment",
            "game_versions": "/tag/game_version",
            "licenses": "/tag/license",
            "loaders": "/tag/loader"
        },
        "teams": {
            "members": "/team/{id}/members",
            "team": "/team/{id}"
        },
        "user": {
            "avatar": "/user/{id}/avatar",
            "notifications": "/user/{id}/notifications",
            "user": "/user/{id}",
            "user_projects": "/user/{id}/projects"
        },
        "versions": {
            "download": "/version/{id}/file/{filename}",
            "file_by_hash": "/version_file/{hash}",
            "files": "/version/{id}/files",
            "latest_for_hash": "/version_file/{hash}/update?algorithm={algo}",
            "version": "/version/{id}",
            "versions_by_hash": "/version_file/{hash}/versions"
        }
    }
}